{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "noEmitOnError": false,
    "jsx": "react-jsx",
    "outDir": "./tests/",
    "rootDir": "./",
    "declaration": true,
    "declarationDir": "./extension-scripts/dist/@types",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": [
    // "extension-scripts/**/**.test.**",
    // "./vite.config.ts",
    // "./extension-frontend/src/vite-env.d.ts"
    
    //just test files
    "**/*.test.ts",
  ],      
  "exclude": ["node_modules",
    "./extension-scripts/dist",
    "./extension-scripts/@types"
  ],
  "types": ["node"]
}
